{
  "name": "My Extension",
  "version": "0.2",
  "manifest_version" : 2,
  "description": "Shorten ur url",
  "background" : {
    "scripts" : ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_scripts": 
  [
    {
      "js": [ "background.js"],
      "matches": [ "http://*/*", "https://*/*"]
    }
  ]
}